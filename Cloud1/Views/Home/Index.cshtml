@{
    ViewData["Title"] = "Home Page";
}
<style>
    .flag {
        background-image: linear-gradient(45deg, #D4d3d0, #C9c9c9);
        padding: 8px;
        border-radius: 20px;
        background-position: center;
        height: inherit;
    }

    h1 {
        color: black;
    }

    p {
        color: darkslategray;
        font-size: 20px;
    }
</style>
<div class="text-center flag">
