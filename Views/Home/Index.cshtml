
@{
    ViewData["Title"] = "Home Page";
    var userID = ViewData["userID"];
    var products = ViewData["Products"] as List<ST10263992.Models.productTable>;
}
<style>
    .flag {
        background-image: linear-gradient(45deg, #D4d3d0, #C9c9c9);
        padding: 8px;
        border-radius: 20px;
        background-position: center;
        height: inherit;
    }

    h1 {
        color: black;
    }

    p {
        color: darkslategray;
        font-size: 20px;
    }
</style>
<div class="text-center flag">
    <h1 class="display-4">Welcome to Khumalo Craft </h1>

    <p>Learn about KhumaloCraft here: <a asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>.</p>
    <div class="Logo"></div>

    <hr />
    <p>
        <h3>
            Here at Khumalo Craft we strive to both make and sell all authentic South African products, from sustainable and
            natural resources.
            If you or anyone you are interested in what we are selling please feel free to browse our current products here:
            <a asp-area="" asp-controller="Home" asp-action="MyWorkPage">Browse Here</a>.
    </p>
    </h3>
    </p>
</div>


@if (userID != null)
{
    <p>User ID: @userID</p>
}

<h2>All Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category</td>
                <td>@product.Availability</td>
                <td>
                    <form asp-controller="Transaction" asp-action="PlaceOrder" method="post">
                        <input type="hidden" name="userID" value="@userID" />
                        <input type="hidden" name="productID" value="@product.ProductID" />
                        <button type="submit">Place Order</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
