@{
    var userId = ViewData["UserID"];
}

<!DOCTYPE html>
<html lang="en">

<style>
    .LoginProfile {
        width: 35px;
        height: 35px;
        padding: 0;
        margin: 0;
    }

    .Cart {
        width: 35px;
        height: 35px;
        padding: 0;
        margin: 0;
    }

    .navSpace {
        display: flex;
        gap: 20px;
    }
</style>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Khumalo Craft</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cloud1.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/Images/KHUMALOLOGO.png" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Khumalo Craft</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About
                                Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Products
                            </a>
                        </li>
                    </ul>
                    <div class="navSpace">
                        @if (userId != null)
                        {
                            <a asp-area="" asp-controller="Cart" asp-action="Index"><img class="Cart"
                                    src="~/Images/shoppingCart.png" /></a>
                            <a asp-area="" asp-controller="UserProfile" asp-action="Index"><img class="LoginProfile"
                                    src="~/Images/profile.png" /></a>
                        }
                        else
                        {
                            <a asp-area="" asp-controller="Login" asp-action="Index"><img class="Cart"
                                    src="~/Images/shoppingCart.png" /></a>
                            <a asp-area="" asp-controller="Login" asp-action="Index"><img class="LoginProfile"
                                    src="~/Images/profile.png" /></a>
                        }

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - E-commerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>